{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "properties": {
        "workBreakHour": {
            "type": "number"
        },
        "workBreakMinute": {
            "enum": [
                0,
                15,
                30,
                45
            ],
            "type": "number"
        },
        "workDate": {
            "description": "Enables basic storage and retrieval of dates and times.",
            "format": "date",
            "type": "object"
        },
        "workEndHour": {
            "type": "number"
        },
        "workEndMinute": {
            "enum": [
                0,
                15,
                30,
                45
            ],
            "type": "number"
        },
        "workStartHour": {
            "type": "number"
        },
        "workStartMinute": {
            "enum": [
                0,
                15,
                30,
                45
            ],
            "type": "number"
        },
        "works": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "hour": {
                        "type": "number"
                    },
                    "minute": {
                        "enum": [
                            0,
                            15,
                            30,
                            45
                        ],
                        "type": "number"
                    },
                    "text": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "hour",
                    "minute"
                ],
                "type": "object"
            },
            "type": "array"
        }
    },
    "required": [
        "workBreakHour",
        "workBreakMinute",
        "workDate",
        "workEndHour",
        "workEndMinute",
        "workStartHour",
        "workStartMinute",
        "works"
    ],
    "type": "object"
}

